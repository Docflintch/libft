CCW = cc -Wall -Werror -Wextra
SRC = ft_atoi.c ft_bzero.c ft_calloc.c ft_isalnum.c ft_isalpha.c ft_isascii.c /
	ft_isdigit.c isprint.c ft_itoa.c ft_memchr.c ft_memcmp.c ft_memcpy.c/
	ft_memmove.c ft_memset.c ft_putchar_fd.c putendl_fd.c ft_putnbr_fd.c/
	ft_putstr_fd.c ft_split.c ft_strchr.c ft_strdup.c ft_striteri.c strjoin.c/
	ft_strlcat.c ft_strlcpy.c ft_strlen.c ft_strmapi.c ft_strncmp.c/
	ft_strnstr.c strrchr.c ft_strtrim.c ft_substr.c ft_tolower.c ft_toupper.c

#endif
NAME = libft.a
OBJ = ($(SRC):.c=.o)

all : $(SRC)

%.o : %.c
	$(CCW) -o $@ -c $<

$(SRC) : $(OBJ)
	$(CCW) -o $@ $^

clean :
	rm -rf $(OBJ)

fclean : clean
	rm -rf $(NAME)

re : fclean all